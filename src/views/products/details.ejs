<!DOCTYPE html>
<html lang="en">
                    <!-- head    -->
                    <%- include('../partials/head.ejs',{title:'producto.name'}) %>
                    <!-- head    -->

    <body>
                    <!-- header -->
                    <%- include('../partials/header.ejs') %>
                    <!-- header -->
    
        <main style="background-image:url('images/Plantillas Feed-02_v2.jpg')">
            <section class="img-detalle">
                <div class="containerDetailMacro">
                    <img src="/images/products/<%-producto.image%>" alt="imagen de producto" width="100%" height="100%">

                    <div class="containerDetail">
                        <i class="fas fa-gem" height="4.5%" width="auto" style="color:#0AA689"></i>
                        
                        <div class="texto-body">
                            <h3><p><strong><%- producto.name %></strong></p></h3>
                            <p class= "price" style="color:rgb(0, 116, 116);font-size:18px;">
                                Standard: <%-producto.price%>$  Larga: <%- producto.price+ (producto.price*0.15) %>$</p>
                            <h4 class="description"><%- producto.description%></h4>
                            <% for( let i = 0; i < producto.categories.length; i++ ) { %>
                              
                                    
                               
                             <div>
                               Cantidad: <%= producto.stock %> 
                                
                            </div>
                            <div>
                                 <%= producto.detail %> 
                            </div>

                            <select name="tallas" id="talla-select">
                                <option value="">--Elige el tamaño--</option>
                                <option value="M">Standard</option>
                                <option value="XL">Larga</option>
                            </select>

                            <% } %> 
                            <a href="/productslists/<%=producto.id%>/editproduct/" class="action-button edit">EDITAR PRODUCTO</a>
                            
                            <form action="/productslists/<%=producto.id%>?_method=DELETE" method="POST" style="display: inline-flex">
                                <button type="submit" class="action-button delete">ELIMINAR</button>
                            </form>
                        <div></div>
                        <div class="WishlistAddCart">
                            <div class="fixed">
                                <a href="/cart">
                                    <i class="fa fa-heart" aria-hidden="true" height="10%" width="auto" style="color:#0AA689"></i>
                                </a>
                                <p><a style="color: rgb(0, 116, 116);" href="#">A tus favoritos</a></p>
                            </div>

                            <div class="fixed">
                                <p style="color: rgb(255, 255, 255);"></p>
                            </div>

                            <div class="fixed">
                                <a href="/productslists/cart">
                                    <i class="fa fa-shopping-cart" aria-hidden="true" height="10%" width="auto" style="color:#0AA689"></i>
                                </a>
                                <p><a style="color: rgb(0, 116, 116);" href="/productslists/cart">Al carrito</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <section class="suggestions-detalle">
                <div class="containerSuggestions"></div>
                    <h5 style="margin-left: 12.5%;margin-top: 4%;">También te podría interesar:</h5>
                    
                    <div class="products">
                        <button class="arrows"><i class='fas fa-arrow-left'></i></button>
                        <% for( let i = 0; i < producto.length; i++ ) { %>
                            <article>   
                                <img src="/images/<% producto[i].image%> " alt="dije">
                                <div class="main-article">
                                    <i class="far fa-heart"></i>
                                    <p class= "price"><%  producto[i].price%> </p>
                                    <p class= "name"><%  producto[i].name%> </p>
                                    
                                </div>
                            </article>
    
                        <% } %>
                        
                    

                        <button class="arrows"><i class='fas fa-arrow-right' style="color:black"></i></button>
                    </div>
                </div>
            </section>
           <!-- site-shopping-info -->
           <%- include('../partials/site-shopping-info.ejs') %>
         <!-- site-shopping-info -->
        </main>

        <%- include('../partials/footer.ejs') %>
    </body>
</html>