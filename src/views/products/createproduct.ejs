<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head') %>
<body>
	<!-- Header -->
	<%- include('partials/header') %>
	<!-- /Header -->
	<main class="main-register">
		<h2 class="products-title">Formulario de creación de productos</h2>
	<div class="container products-wrapper">
		<div class="row">
			
		</div>
		<div class="col-12">
			<form action="/productslists/store" method="POST"enctype='multipart/form-data'>
				<div class="row product-detail">
					<div class="col-12 col-md-6">
						<label for="name" class="form-label">Nombre del producto:</label>
						<input type="text" id="name" name="name" placeholder="Ej: Anillo ruby" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="price" class="form-label">Precio del producto:</label>
						<input type="number" id="price" name="price" placeholder="Ej: 5678" class="form-input"><br><br>
					</div>
					<div class="col-12 col-md-6">
						<label for="stock" class="form-label">Stock:</label>
						<input type="text" id="stock" name="stock" placeholder="Ej: 5" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<br><label for="category" class="form-label">Categorías:</label>
						<select name="category" id="category" class="form-input">
							<option value="">Categoría</option>
							<% for( let i = 0; i < categories.length; i++ ) { %>
								<option value="<%=categories[i].name %> "><%=categories[i].name%></option>
							
							<% } %>
							
							
						</select>
					</div>
					<div class="col-12 col-md-6">
						<label for="imageProduct"class="form-label">Seleccionar Imágen</label>
						<input type="file" name="imageProduct">
					</div>

					<div class="col-12">
						<br><label for="detail" class="form-label">Descripción:</label>
						<textarea name="detail" id="detail" class="form-input"></textarea>
					</div>
					<div class="col-12">
						<button type="submit" class="buy-now-button">Guardar producto</button>
					</div>
				</div>
			</form>
		</div>

	</div>
</main>


	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>