<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('../partials/head') %>
<body>
	<!-- Header -->
	<%- include('../partials/header') %>
	<!-- /Header -->
<main class="main-register">
	<h2 class="products-title">Editando Producto </h2> 
	<div class="container products-wrapper">
		<div class="row">
			
		</div>
		<div class="col-12">
			<form action="/productslists/<%=producto.id%>?_method=PUT" method="POST">
				<div class="row product-detail">
					<div class="col-12 col-md-6">
						<label for="name" class="form-label">Nombre del producto:</label>
						<input type="text" id="name" name="name"value="<%=producto.name%>" class="form-input">
						 <% if (locals && locals.errors) { %>
							<% if (locals.errors[0].param=="name") { %>
								<h3> <%= locals.errors[0].msg %>  </h3> 
							<% } %>
						<% } %> 
						
					</div>
					<div class="col-12 col-md-6">
						<label for="price" class="form-label">Precio del producto:</label>
						<input type="number" id="price" name="price"  value="<%=producto.price%>" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="stock" class="form-label">Stock:</label>
						<input type="number" id="stock" name="stock" value="<%=producto.stock%>" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<br><label for="category" class="form-label">Categoría:</label>
						<select name="category" id="category" class="form-input">						
							<option value="">Elegir</option>
							<% for( let i = 0; i < categories.length; i++ ) { %>
								<option value="<%=categories[i].name %> "><%=categories[i].name%></option>
							
							<% } %>
                                
                                     
                                
                         
							
							
					</div>
					<div class="col-12">
						<br><label for="description"  class="form-label">Descipción:</label>
						<textarea name="description" id="description"  class="form-input"><%=producto.detail%></textarea>
					</div>
					<div class="col-12">
						<button type="submit" class="buy-now-button">Guardar producto</button>
					</div>
				</div>
			</form>
		</div>

	</div>

</main>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('../partials/footer') %>
	<!-- /footer -->
</body>	
</html>

